@model IEnumerable<AuthWithDB.Models.Student>
@{
    ViewBag.Title = "Student List";
}

<h2>Student List</h2>

<a href="@Url.Action("Create", "Student")">Create a new student</a>

<table class="table table-bordered table-condensed">
    <thead>
        <tr>
            <th class="text-align: center;">Last Name</th>
            <th class="text-align: center;">First Mid Name</th>
            <th class="text-align: center;">Enrollment Date</th>
            <th class="text-align: center;">Image</th>
            <th class="text-align: center;">Edit Action</th>
            <th class="text-align: center;">Delete Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-align: center;">@Html.DisplayFor(modelItem => item.LastName)</td>
                <td class="text-align: center;">@Html.DisplayFor(modelItem => item.FirstMidName)</td>
                <td class="text-align: center;">@Html.DisplayFor(modelItem => item.EnrollmentDate)</td>
                <td class="text-align: center;"><a href="#" class="pop" data-id="@item.ID"><img src="/Student/RetrieveImage/@item.ID" alt="" height=100 width=150 /></a></td>
                <td class="text-align: center;"><a href="/Student/edit/@Html.DisplayFor(modelItem => item.ID)">Edit</a></td>
                <td class="text-align: center;"><a href="/Student/delete/@Html.DisplayFor(modelItem => item.ID)">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" 
     id="myModal" 
     tabindex="-1" 
     role="dialog" 
     aria-labelledby="myLargeModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header" style="text-align: center;">
                @*This is modal header*@
                <input type="hidden" name="hiddenValue" id="hiddenValue" value="" />
                <div class="lastName"></div><br />
                <img class="imgClass" width="400" height="400" />
            </div>
        </div>
        @*<div class="modal-body">
            <img class="imgClass" width="400" height="400" />
        </div>*@
    </div>
</div>

