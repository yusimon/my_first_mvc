@model AuthWithDB.Models.Content
@{
    ViewBag.Title = "Delete content";
}

<h2>Delete content</h2>

<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(c => c.Title, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(c => c.Title, new { @class="form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Description, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(c => c.Description, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Contents, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <img src="/Content/RetrieveImage/@Html.DisplayFor(c => c.ID)" width="150" height="100" />
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    </div>
}
